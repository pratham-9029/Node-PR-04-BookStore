<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add to Cart Feature</title>
  <style>
    /* Global Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      color: #333;
    }

    header {
      background-color: #4caf50;
      color: white;
      padding: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .cart-icon {
      position: relative;
      cursor: pointer;
      font-size: 1.5rem;
    }

    .cart-count {
      position: absolute;
      top: -8px;
      right: -8px;
      background-color: #ff4444;
      color: white;
      border-radius: 50%;
      width: 20px;
      height: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 0.75rem;
    }

    main {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1rem;
    }

    section {
      margin-bottom: 2rem;
    }

    h2 {
      margin-bottom: 1rem;
      color: #333;
    }

    /* Product Management Section */
    .product-management {
      width: 50%;
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      margin-bottom: 2rem;
      margin: auto;
    }

    .product-management h2 {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 2rem;
      padding: 1rem;
      background-color: #4caf50;
      color: white;
    }

    .product-form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: start;
    }

    .form-group {
      display: flex;
      flex-direction: column;
    }

    .form-group label {
      margin-bottom: 0.5rem;
      font-weight: bold;
    }

    .form-group input {
      padding: 0.5rem 1rem;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 1rem;
    }

    .btn-save,
    .btn-cancel {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 1rem;
      height: fit-content;
    }

    .btn-save {
      padding: 0.8rem 1.5rem;
      margin-top: 1rem;
      background-color: #4caf50;
      color: white;
      font-weight: bold;
      font-size: 1rem;
    }

    .btn-save:hover {
      background-color: #45a049;
    }

    .btn-cancel {
      padding: 0.5rem 1rem;
      background-color: #ff9800;
      color: white;
    }

    .btn-cancel:hover {
      background-color: #e68900;
    }

    /* Products Section */


    /* Cart Section */
    .cart-section {
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 1.5rem;
    }

    .cart-items {
      list-style: none;
      margin-bottom: 1rem;
    }

    .cart-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem;
      border-bottom: 1px solid #eee;
    }

    .cart-item:last-child {
      border-bottom: none;
    }

    .item-info {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .item-image {
      width: 50px;
      height: 50px;
      background-color: #eee;
      border-radius: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
    }

    .item-details h3 {
      font-size: 1rem;
      margin-bottom: 0.25rem;
    }

    .item-price {
      color: #4caf50;
      font-weight: bold;
    }

    .item-quantity {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .quantity-btn {
      background-color: #f0f0f0;
      border: none;
      width: 30px;
      height: 30px;
      border-radius: 50%;
      cursor: pointer;
      font-size: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .quantity-btn:hover {
      background-color: #e0e0e0;
    }

    .remove-btn {
      background-color: #ff4444;
      color: white;
      border: none;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.8rem;
    }

    .remove-btn:hover {
      background-color: #cc0000;
    }

    .cart-summary {
      border-top: 2px solid #eee;
      padding-top: 1rem;
      text-align: right;
    }

    .cart-summary p {
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }

    .cart-summary span {
      font-weight: bold;
    }

    .btn-clear,
    .btn-checkout {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 1rem;
      margin-left: 0.5rem;
    }

    .btn-clear {
      background-color: #ff9800;
      color: white;
    }

    .btn-clear:hover {
      background-color: #e68900;
    }

    .btn-checkout {
      background-color: #2196f3;
      color: white;
    }

    .btn-checkout:hover {
      background-color: #0b7dda;
    }

    .empty-cart-message {
      text-align: center;
      color: #777;
      font-style: italic;
      padding: 1rem;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .products-container {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      }

      header {
        flex-direction: column;
        gap: 1rem;
      }

      .cart-summary {
        text-align: center;
      }

      .btn-clear,
      .btn-checkout {
        margin: 0.5rem 0;
        display: block;
        width: 100%;
      }

      .product-form {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>

<body>
  <header>
    <div style="display: flex; gap: 0.8rem; align-items: center;">
      <h1
        style="background: -webkit-linear-gradient(#64f891, #000000); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
        Books Store</h1>
      <a href="/"
        style="color: white; text-decoration: none; font-size: 1.2rem; background: -webkit-linear-gradient(#64d348, #000000); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Add
        Books</a>
      <a href="/view-book"
        style="color: white; text-decoration: none; font-size: 1.2rem; background: -webkit-linear-gradient(#64d348, #000000); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;">View
        Books</a>
    </div>
    <div class="cart-icon" id="cartIcon">
      <a href="/view-cart">ðŸ›’</a>
      <span class="cart-count" id="cartCount">
        <%= data.length %>
      </span>
    </div>
  </header>

  <main>
    <!-- Product Management Section -->
    <section class="product-management">
      <div style="background-color: #4caf50; width: 100%;">
        <h2
          style="background: -webkit-linear-gradient(#64f891, #000000); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
          Add Books</h2>
      </div>
      <form id="productForm" class="product-form" method="post" action="/" enctype="multipart/form-data">
        <input type="hidden" id="productId" value="" />
        <div class="form-group">
          <label for="productName">Book Name:</label>
          <input type="text" id="productName" name="name" required placeholder="Enter book name" />
        </div>
        <div class="form-group">
          <label>Book Image:</label>
          <input type="file" style="color: black; background-color: rgb(255, 255, 255);" name="image" required />
        </div>
        <div class="form-group">
          <label for="productEmoji">Author Name:</label>
          <input type="text" id="productEmoji" name="author" placeholder="Enter author name" />
        </div>
        <div class="form-group">
          <label for="productEmoji">Publisher Name:</label>
          <input type="text" id="productEmoji" name="publisher" placeholder="Enter publisher name" />
        </div>
        <div class="form-group">
          <label for="productPrice">Price ($):</label>
          <input type="number" id="productPrice" name="price" step="1" min="0" required placeholder="Enter price" />
        </div>
        <button href="" type="submit" id="saveProduct" class="btn-save">
          <a href=""
            style="text-decoration: none; background: -webkit-linear-gradient(#64f891, #000000); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Save
            Product</a>
        </button>
        <button type="button" id="cancelEdit" class="btn-cancel" style="display: none">
          Cancel
        </button>
      </form>
    </section>

